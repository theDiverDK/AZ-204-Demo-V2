@model ConferenceHub.Models.Session

@{
    ViewData["Title"] = "Edit Session";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Organizer Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit Session</li>
        </ol>
    </nav>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Edit Session</h2>
        </div>
        <div class="card-body">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CurrentRegistrations" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Speaker" class="form-label"></label>
                    <input asp-for="Speaker" class="form-control" />
                    <span asp-validation-for="Speaker" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="StartTime" class="form-label"></label>
                        <input asp-for="StartTime" type="datetime-local" class="form-control" />
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="EndTime" class="form-label"></label>
                        <input asp-for="EndTime" type="datetime-local" class="form-control" />
                        <span asp-validation-for="EndTime" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Room" class="form-label"></label>
                        <input asp-for="Room" class="form-control" />
                        <span asp-validation-for="Room" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Capacity" class="form-label"></label>
                        <input asp-for="Capacity" type="number" class="form-control" min="1" />
                        <span asp-validation-for="Capacity" class="text-danger"></span>
                        <small class="text-muted">Current registrations: @Model.CurrentRegistrations</small>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                </div>
            </form>

            <hr class="my-4" />

            <h4>Upload Session Slides</h4>
            <form asp-action="UploadSlides" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="slides" class="form-label">Select PDF/JPG files</label>
                    <input id="slides" name="slides" class="form-control" type="file" accept=".pdf,.jpg,.jpeg" multiple />
                </div>
                <button type="submit" class="btn btn-outline-primary">Upload Slides</button>
            </form>

            @if (Model.SlideUrls != null && Model.SlideUrls.Any())
            {
                <div class="mt-4">
                    <h5>Uploaded Slides (@Model.SlideUrls.Count)</h5>
                    <ul class="list-group">
                        @for (var i = 0; i < Model.SlideUrls.Count; i++)
                        {
                            var slideUrl = Model.SlideUrls[i];
                            <li class="list-group-item">
                                <a href="@slideUrl" target="_blank" rel="noopener noreferrer">Slide @(i + 1)</a>
                            </li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
