@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Registrations";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Organizer Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">Registrations</li>
        </ol>
    </nav>

    <div class="card">
        <div class="card-header">
            <h2 class="mb-0">Session Registrations</h2>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Session</th>
                                <th>Attendee Name</th>
                                <th>Attendee Email</th>
                                <th>Registered At</th>
                                <th>Session Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @if (item.Session != null)
                                        {
                                            <strong>@item.Session.Title</strong><br />
                                            <small class="text-muted">Room: @item.Session.Room</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Session not found</span>
                                        }
                                    </td>
                                    <td>@item.Registration.AttendeeName</td>
                                    <td>@item.Registration.AttendeeEmail</td>
                                    <td>@item.Registration.RegisteredAt.ToString("MMM dd, yyyy h:mm tt")</td>
                                    <td>
                                        @if (item.Session != null)
                                        {
                                            @item.Session.StartTime.ToString("MMM dd, yyyy")
                                            <br />
                                            <small class="text-muted">@item.Session.StartTime.ToString("h:mm tt")</small>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="mt-3">
                    <p class="text-muted">Total Registrations: <strong>@Model.Count()</strong></p>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <h5>No registrations yet</h5>
                    <p>When attendees register for sessions, they will appear here.</p>
                </div>
            }
        </div>
        <div class="card-footer">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>
</div>
